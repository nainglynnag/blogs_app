                    <span class="text-sky-600 font-medium">JS</span>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-gray-800">John Smith</p>
                    <p class="text-xs text-gray-500">Senior Developer</p>
                  </div>
                </div>
                <button
                  class="text-sky-600 hover:text-sky-700 font-medium"
                  onclick="location.href='blogs?id=5'"
                >
                  Read More ‚Üí
                </button>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Blog Posts Grid -->
      <section>
        <div class="flex justify-between items-center mb-8">
          <h3 class="text-2xl font-bold text-gray-800">Latest Posts</h3>
          <div class="flex gap-2">
            <button
              class="bg-sky-500 text-white px-4 py-2 rounded-lg text-sm font-medium"
            >
              All
            </button>
            <button
              class="text-gray-600 hover:text-sky-600 px-4 py-2 rounded-lg text-sm font-medium transition-colors"
            >
              Tech
            </button>

            <button
              class="text-gray-600 hover:text-sky-600 px-4 py-2 rounded-lg text-sm font-medium transition-colors"
            >
              Design
            </button>

            <button
              class="text-gray-600 hover:text-sky-600 px-4 py-2 rounded-lg text-sm font-medium transition-colors"
            >
              Lifestyle
            </button>
          </div>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% blogs.forEach(function(blog) { %>
          <article
            class="bg-white/70 backdrop-blur-sm rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow group"
          >
            <div
              class="h-48 bg-gradient-to-br from-purple-200 to-pink-200 flex items-center justify-center"
            >
              <% if (blog.blog_image) { %>
              <img
                src="/uploads/<%= blog.blog_image %>"
                alt="<%= blog.blog_title %>"
                class="w-full h-full object-cover"
              />
              <% } else { %>
              <span class="text-4xl">üìù</span>
              <% } %>
            </div>
            <div class="p-6">
              <div class="flex justify-between items-center mb-3">
                <span
                  class="bg-purple-100 text-purple-600 px-2 py-1 rounded-full text-xs font-medium"
                  ><%= blog.category_title %></span
                >
                <span class="text-gray-500 text-xs ml-3"
                  ><%= blog.blog_datetime.toLocaleDateString() %></span
                >
              </div>
              <h4
                class="text-lg font-semibold text-gray-800 mb-3 group-hover:text-sky-600 transition-colors"
              >
                <%= blog.blog_title %>
              </h4>
              <p class="text-gray-600 text-sm mb-4"><%= blog.blog_detail %>.</p>
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div
                    class="w-8 h-8 bg-purple-200 rounded-full flex items-center justify-center"
                  >
                    <span class="text-purple-600 text-xs font-medium"
                      ><%= blog.blog_author.split(" ").map((word) =>
                      word.charAt(0)).join("").toUpperCase() %></span
                    >
                  </div>
                  <span class="text-sm text-gray-600 ml-2"
                    ><%= blog.blog_author %></span
                  >
                </div>
                <button
                  class="text-sky-600 hover:text-sky-700 text-sm font-medium"
                >
                  Read ‚Üí
                </button>
              </div>
            </div>
          </article>
          <% }) %>
        </div>

        <!-- Load More Button -->
        <div class="text-center mt-12">
          <button
            class="bg-white/70 hover:bg-white text-sky-600 border-2 border-sky-200 hover:border-sky-300 px-8 py-3 rounded-lg font-medium transition-all backdrop-blur-sm"
          >
            Load More Posts
          </button>
        </div>
      </section>
    </main>

